
public class Movement
{
	public static void moveUp()
	{
		Logger.write("moveUp called");
		Draw.rect.set(Draw.rect.get()[0], Draw.rect.get()[1] + 10, Draw.rect.get()[2], Draw.rect.get()[3]);
	}
	
	public static void moveDown()
	{
		Logger.write("moveDown called");
		Draw.rect.set(Draw.rect.get()[0], Draw.rect.get()[1] - 10, Draw.rect.get()[2], Draw.rect.get()[3]);
	}
	
	public static void moveLeft()
	{
		Draw.rect.set(Draw.rect.get()[0] - 10, Draw.rect.get()[1], Draw.rect.get()[2], Draw.rect.get()[3]);
		Logger.write("moveLeft called");
	}
	
	public static void moveRight()
	{
		Logger.write("moveRight called");
		Draw.rect.set(Draw.rect.get()[0] + 10, Draw.rect.get()[1], Draw.rect.get()[2], Draw.rect.get()[3]);
	}
}
